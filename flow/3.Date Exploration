-- Helpful foe understanding the span , and help for outlier checking
-- Shipping date range and span
SELECT MIN(shipping_date) AS min_date FROM fact_sales
UNION
SELECT MAX(shipping_date) AS max_date FROM fact_sales
UNION
SELECT DATEDIFF(MAX(shipping_date), MIN(shipping_date)) AS total_days FROM fact_sales;

-- Find oldest and youngest customers
SELECT MIN(birthdate), MAX(birthdate),
       DATEDIFF(MIN(birthdate), CURDATE()) AS Oldest_Age,
       DATEDIFF(MAX(birthdate), CURDATE()) AS Youngest_Age
FROM dim_customers WHERE birthdate != '';
